---
import Layout from "../layouts/Layout.astro";
import Image from "astro/components/Image.astro";
import "../styles/global.css";
import NavbarGeneral from "../components/NavbarGeneral.jsx";
import DiskonSpesial from "../assets/diskon-spesial-card.png";
---

<Layout title="Point Frenzy">
  <NavbarGeneral client:load />
  <!-- Fixed Background Hack -->
  <div class="fixed-bg"></div>
  <main
    class="prose prose-lg overflow-x-hidden pt-14 mt-16 mb-24 max-w-4xl mx-auto"
  >
    <!-- Artist Section -->
    <section id="artist">
      <div class="px-4">
        <h1
          class="text-center font-raleway text-[1.5rem] font-black leading-[130%]"
        >
          Point Frenzy
        </h1>
        <p class="text-center text-[1rem] leading-[150%]">
          Kamu berkesempatan untuk mendapat diskon di jam spesial tetap pantau
          page ini ya.
        </p>
      </div>

      <!-- Diskon Spesial -->
      <div class="md:max-w-lg mx-auto">
        <Image src={DiskonSpesial} alt="Diskon Spesial" class="px-4 pb-6" />
      </div>

      <div class="grid grid-cols-3 mb-6">
        <div class="flex justify-center">
          <img src="/tenants-coming-soon.svg" alt="Tenant" class="w-24 my-0" />
        </div>
        <div class="flex justify-center">
          <img src="/tenants-coming-soon.svg" alt="Tenant" class="w-24 my-0" />
        </div>
        <div class="flex justify-center">
          <img src="/tenants-coming-soon.svg" alt="Tenant" class="w-24 my-0" />
        </div>
      </div>
      <div class="grid grid-cols-3 mb-6">
        <div class="flex justify-center">
          <img src="/tenants-coming-soon.svg" alt="Tenant" class="w-24 my-0" />
        </div>
        <div class="flex justify-center">
          <img src="/tenants-coming-soon.svg" alt="Tenant" class="w-24 my-0" />
        </div>
        <div class="flex justify-center">
          <img src="/tenants-coming-soon.svg" alt="Tenant" class="w-24 my-0" />
        </div>
      </div>
      <div class="grid grid-cols-3 mb-6">
        <div class="flex justify-center">
          <img src="tenants-coming-soon.svg" alt="Tenant" class="w-24 my-0" />
        </div>
        <div class="flex justify-center">
          <img src="tenants-coming-soon.svg" alt="Tenant" class="w-24 my-0" />
        </div>
        <div class="flex justify-center">
          <img src="tenants-coming-soon.svg" alt="Tenant" class="w-24 my-0" />
        </div>
      </div>
      <div class="flex justify-center">
        <img src="/tenants-coming-soon.svg" alt="Tenant" class="w-24 my-0" />
      </div>
    </section>
  </main>
</Layout>
